# Store App Environment Configuration
# Copy this file to .env and customize for your environment

# Environment
ASPNETCORE_ENVIRONMENT=Development

# Database Configuration
POSTGRES_PASSWORD=StrongPassword123!
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_USER=store_user
RABBITMQ_PASSWORD=StrongPassword123!
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# JWT Configuration
JWT_SECRET_KEY=your-very-long-secret-key-here-at-least-32-characters-long-for-store-app-development
JWT_ISSUER=Store.API
JWT_AUDIENCE=Store.Client
JWT_EXPIRY_MINUTES=60

# Service Ports
IDENTITY_SERVICE_PORT=5001
PRODUCT_SERVICE_PORT=5002
CART_SERVICE_PORT=5003
ORDER_SERVICE_PORT=5004
AUDIT_SERVICE_PORT=5005
GATEWAY_SERVICE_PORT=5000

# Frontend Port (if using frontend service)
FRONTEND_PORT=3000

# Monitoring Ports (for future use)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_PORT=16686
