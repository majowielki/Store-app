{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Store.Shared.MessageBus": "Information",
      "RabbitMQ": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-very-long-secret-key-here-at-least-32-characters-long-for-store-app",
    "Issuer": "Store.API",
    "Audience": "Store.Client",
    "ExpirationInMinutes": 60
  },
  "Jwt": {
    "Key": "default-secret-key-that-is-long-enough-for-hmac-sha256"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "store_events",
    "ConnectionTimeout": 30000,
    "RequestedHeartbeat": 60,
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryInterval": 5000
  },
  "AllowedOrigins": [
    "https://localhost:3000",
    "https://localhost:3001",
    "http://localhost:3000",
    "http://localhost:3001"
  ],
  "Services": {
    "IdentityService": "http://identityservice:5001",
    "ProductService": "http://productservice:5003",
    "CartService": "http://cartservice:5005",
    "OrderService": "http://orderservice:5006",
    "AuditLogService": "http://auditlogservice:5004"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        },
        "AuthorizationPolicy": "UserOrAdmin"
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "UserOrAdmin"
      },
      "audit-route": {
        "ClusterId": "audit-cluster",
        "Match": {
          "Path": "/api/auditlog/{**catch-all}"
        },
        "AuthorizationPolicy": "AdminOnly"
      }
      ,
      "admin-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        },
        "AuthorizationPolicy": "AdminOnly"
      }
    },
    "Clusters": {
      "identity-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://identityservice:5001/"
          }
        }
      },
      "products-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://productservice:5003/"
          }
        }
      },
      "cart-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://cartservice:5005/"
          }
        }
      },
      "orders-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://orderservice:5006/"
          }
        }
      },
      "audit-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Destinations": {
          "destination1": {
            "Address": "http://auditlogservice:5004/"
          }
        }
      }
    }
  },
  "RateLimiting": {
    "DefaultPolicy": "ApiPolicy",
    "Policies": {
      "ApiPolicy": {
        "Window": "00:01:00",
        "PermitLimit": 100,
        "QueueLimit": 10
      },
      "EventsPolicy": {
        "Window": "00:01:00",
        "PermitLimit": 50,
        "QueueLimit": 5
      }
    }
  }
}
