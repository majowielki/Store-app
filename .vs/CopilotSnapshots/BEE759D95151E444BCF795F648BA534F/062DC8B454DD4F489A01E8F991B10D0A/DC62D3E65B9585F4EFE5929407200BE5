using System.ComponentModel.DataAnnotations;
using System.Linq;

namespace Store.Shared.Models;

public class Cart
{
    public int Id { get; set; }
    
    [Required]
    public string UserId { get; set; } = string.Empty;
    
    public List<CartItem> CartItems { get; set; } = new();
    
    public int NumItemsInCart => CartItems?.Sum(item => item.Amount) ?? 0;
    
    public decimal SubTotal => CartItems?.Sum(item => item.Price * item.Amount) ?? 0;
    
    public decimal Shipping { get; set; }
    
    public decimal Tax { get; set; }
    
    public decimal OrderTotal => SubTotal + Shipping + Tax;
    
    public DateTime CreatedAt { get; set; } = DateTime.UtcNow;
    
    public DateTime UpdatedAt { get; set; } = DateTime.UtcNow;
    
    public bool IsEmpty => !CartItems.Any();
}
